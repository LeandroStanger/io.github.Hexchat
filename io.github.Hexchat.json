{
  "app-id": "io.github.Hexchat",
  "branch": "stable",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "sdk": "org.gnome.Sdk",
  "command": "hexchat",
  "rename-icon": "hexchat",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=session-bus",
    "--share=network",
    "--socket=pulseaudio",
    "--filesystem=xdg-download"
  ],
  "add-extensions": {
    "io.github.Hexchat.Plugin": {
      "version": "2",
      "directory": "extensions",
      "add-ld-path": "lib",
      "merge-dirs": "lib/hexchat/plugins",
      "subdirectories": true,
      "no-autodownload": true,
      "autodelete": true
    }
  },
  "modules": [
    {
      "name": "pango",
      "config-opts": ["--disable-introspection"],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/pango/1.40/pango-1.40.14.tar.xz",
          "sha256": "90af1beaa7bf9e4c52db29ec251ec4fd0a8f2cc185d521ad1f88d01b3a6a17e3"
        },
        {
          "type": "patch",
          "path": "71aaeaf020340412b8d012fe23a556c0420eda5f.patch"
        }
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la",
        "/lib/*.a",
        "/lib/pkgconfig",
        "/share/gtk-doc",
        "/share/man"
      ]
    },
    {
      "name": "hexchat",
      "buildsystem": "meson",
      "config-opts": [
        "--buildtype=release",
        "-Ddbus-service-use-appid=true",
        "-Dwith-perl=false"
      ],
      "cleanup": [
        "/lib/pkgconfig",
        "/share/man"
      ],
      "post-install": [
        "install -d /app/extensions"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://dl.hexchat.net/hexchat/hexchat-2.14.2.tar.xz",
          "sha256": "7792b9e52560fbd3e10d75bfb5d138a20913a87771d676d296547f1b4ac09618"
        },
        {
          "type": "patch",
          "path": "Load-plugins-from-Flatpak-extensions.patch"
        }
      ],
      "modules": [
        "org.luajit.Luajit.json",
        {
          "name": "lgi",
          "no-autogen": true,
          "build-options": {
            "cflags": "-O2",
            "env": {
              "LUA_CFLAGS": "-I/app/include/luajit-2.1"
            }
          },
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/pavouk/lgi/archive/0.9.2.tar.gz",
              "sha256": "cfc4105482b4730b3a40097c9d9e7e35c46df2fb255370bdeb2f45a886548c4f"
            },
            {
              "type": "shell",
              "commands": [ "sed -i 's|/usr/local|/app|' ./lgi/Makefile" ]
            }
          ]
        }
      ]
    }
  ]
}
