{
  "app-id": "io.github.Hexchat",
  "branch": "stable",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "hexchat",
  "rename-icon": "hexchat",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=session-bus",
    "--share=network",
    "--filesystem=xdg-download",
    "--env=SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt"
  ],
  "add-extensions": {
    "io.github.Hexchat.Plugin": {
      "version": "2",
      "directory": "extensions",
      "add-ld-path": "lib",
      "merge-dirs": "lib/hexchat/plugins",
      "subdirectories": true,
      "no-autodownload": true,
      "autodelete": true
    }
  },
  "modules": [
    {
      "name": "hexchat",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "--buildtype=release",
        "-Ddbus-service-use-appid=true",
        "-Dwith-perl=false"
      ],
      "cleanup": [
        "/lib/pkgconfig",
        "/share/man"
      ],
      "post-install": [
        "install -d /app/extensions"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://dl.hexchat.net/hexchat/hexchat-2.14.1.tar.xz",
          "sha256": "b032e4bcebe2229f87047439979a1246ddcbf599e7e538baa3f2abfac9a003a2"
        },
        {
          "type": "patch",
          "path": "Load-plugins-from-Flatpak-extensions.patch"
        }
      ],
      "modules": [
        "org.luajit.Luajit.json",
        {
          "name": "lgi",
          "no-autogen": true,
          "build-options": {
            "cflags": "-O2",
            "env": {
              "LUA_CFLAGS": "-I/app/include/luajit-2.1"
            }
          },
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/pavouk/lgi/archive/0.9.1.tar.gz",
              "sha256": "0c70fb2b1ca17d333b7e2c18d5fc943944b5872e063de60df3035ee20b6dafba"
            },
            {
              "type": "shell",
              "commands": [ "sed -i 's|/usr/local|/app|' ./lgi/Makefile" ]
            }
          ]
        }
      ]
    }
  ]
}
